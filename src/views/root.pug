doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Jason's AI Place
    link(rel="stylesheet" href="/static/styles/tailwind.min.css")
    link(rel="stylesheet" href="/static/styles/shared.css")
    link(rel="stylesheet" href="/static/styles/root.css")
    link(rel="stylesheet" href="/static/styles/chat.css")
  body(class="min-h-screen bg-gray-900 text-gray-200 relative")
    .flex.min-h-screen
      aside(class="w-64 bg-gray-800 p-4")
        nav(class="flex flex-col space-y-2")
          a(href="/chat" class="font-bold text-blue-400 hover:underline" target="main") New Chat 
          hr(class="my-2 border-gray-600")
          each chat in chats 
            a(
              href=`/chat/${chat.id}`,
              target="main",
              class="text-gray-300 hover:text-white truncate"
            ) #{chat.title || 'Untitled Chat'}
      section#chat.flex.flex-col.items-center.justify-start.space-y-4.pb-32.m-4
        .w-full.max-w-2xl.space-y-2
        section
          form#chatForm(
            method="post",
            action="/chat",
            class="",
            style=""
          )
            input#messageInput(
              type="text",
              name="message",
              placeholder="Type your messageâ€¦",
              required=true,
              autocomplete="off",
              class="",
            )
    script(src="/static/scripts/chat.js")
